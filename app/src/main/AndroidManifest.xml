<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.icaboalo.yana">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo_gradient"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.screens.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.screens.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.screens.splash.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.screens.tour.TourActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.screens.register.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.screens.main.loading.LoadingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.screens.main.profile.update.UpdateProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".old.ui.activity.EvaluationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".presentation.screens.schedule.ScheduleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.screens.settings.SettingsActivity"
            android:label="@string/settings_title"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.screens.main.MainActivity" />
        </activity>
        <activity
            android:name=".presentation.screens.settings.food_notifications.FoodNotificationsActivity"
            android:label="@string/food_notification_title"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.screens.settings.SettingsActivity" />
        </activity>
        <activity
            android:name=".presentation.screens.evaluation.EvaluationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".presentation.screens.evaluation.EvaluationResultActivity" />
        <activity
            android:name=".presentation.screens.main.profile.change_password.ChangePasswordActivity"
            android:screenOrientation="portrait" />

        <service android:name=".presentation.services.YanaFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".presentation.services.YanaFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".presentation.notification.WakeUpReceiver" />
        <receiver android:name=".presentation.notification.SleepReceiver" />
        <receiver android:name=".presentation.notification.BreakfastReceiver" />
        <receiver android:name=".presentation.notification.LunchReceiver" />
        <receiver android:name=".presentation.notification.DinnerReceiver" />

        <activity android:name=".presentation.screens.main.profile.birth_date.BirthDateActivity" android:screenOrientation="portrait"/>
        <activity android:name=".presentation.screens.chat_bot.ChatBotActivity"
            android:label="Chat bot" android:screenOrientation="portrait"/>
    </application>

</manifest>