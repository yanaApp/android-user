<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yana_green</item>
        <item name="toolbarStyle">@style/AppTheme.WhiteToolbar</item>
        <item name="android:colorBackground">@color/background_material_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WhiteToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.ButtonBlue">
        <item name="android:background">@drawable/button_green</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.ProgressBarGreen" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/yana_green</item>
        <item name="android:minHeight">20dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomShowcase" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e64fd2c2</item>
        <item name="sv_showcaseColor">@color/yana_orange</item>
        <item name="sv_titleTextAppearance">@style/CustomShowcase.Title</item>
        
    </style>
    
    <style name="CustomShowcase.Title" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/yana_orange</item>
    </style>

    <style name="AppTheme.TextTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">7dp</item>
    </style>

    <style name="AppTheme.TextDescription">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">7dp</item>
    </style>

    <style name="AppTheme.ScheduleEditText">
        <item name="android:editable">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
