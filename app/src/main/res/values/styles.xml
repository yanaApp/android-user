<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yana_green</item>
        <item name="toolbarStyle">@style/AppTheme.WhiteToolbar</item>
        <item name="android:colorBackground">@color/background_material_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WhiteToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="colorPrimary">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.ButtonGreen.Cornered">
        <item name="android:background">@drawable/button_green_cornered</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.ButtonGreen">
        <item name="android:background">@drawable/button_green</item>
        <item name="elevation">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.ProgressBarGreen" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/yana_green</item>
        <item name="android:minHeight">20dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomShowcase" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e64fd2c2</item>
        <item name="sv_showcaseColor">@color/yana_orange</item>
        <item name="sv_titleTextAppearance">@style/CustomShowcase.Title</item>
        
    </style>
    
    <style name="CustomShowcase.Title" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/yana_orange</item>
    </style>

    <style name="AppTheme.TextTitle">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">7dp</item>
    </style>

    <style name="AppTheme.TextDescription">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">7dp</item>
    </style>

    <style name="AppTheme.ScheduleEditText">
        <item name="android:editable">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:background">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:layout_marginLeft">@dimen/size_micro</item>
        <item name="android:layout_marginRight">@dimen/size_micro</item>
    </style>
    <style name="SettingsSwitch">
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="colorControlActivated">@color/yana_green</item>
        <item name="colorControlHighlight">@color/yana_green</item>
    </style>
    <style name="SettingsTitle">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/yana_green</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/size_normal</item>
        <item name="android:paddingTop">@dimen/size_large</item>
        <item name="android:paddingRight">@dimen/size_normal</item>
        <item name="android:paddingBottom">@dimen/size_half</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/default_touch_area</item>
        <!--<item name="customTypeface">@string/roboto_medium</item>-->
    </style>
</resources>
