<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_white</item>
    </style>

    <style name="AppTheme.ProgressBarGreen" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:progressBackgroundTint">@color/pink</item>
    </style>

    <style name="AppTheme.ButtonBlue">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>
