<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="32dp">

    <com.icaboalo.yana.old.ui.widget.CustomFontTextView
        style="@style/AppTheme.TextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDescription"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/title_action_plan_evaluation"/>


    <com.icaboalo.yana.old.ui.widget.CustomFontTextView
        style="@style/AppTheme.TextDescription"
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/description_action_plan_evaluation"
        android:textColor="@color/secondary_text"/>

    <Button
        android:id="@+id/evaluation_button"
        style="@style/AppTheme.ButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skip_evaluation_button"
        android:layout_marginTop="16dp"
        android:text="@string/take_now"/>

    <Button
        android:id="@+id/skip_evaluation_button"
        style="@style/AppTheme.ButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@color/opaque_yana_green"
        android:text="@string/take_later"/>

</RelativeLayout>