<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingEnd="@dimen/size_double"
    android:paddingLeft="@dimen/size_double"
    android:paddingRight="@dimen/size_double"
    android:paddingStart="@dimen/size_double"
    android:background="@color/white"
    android:layout_marginBottom="1dp"
    android:paddingTop="20dp">

    <com.icaboalo.yana.old.ui.widget.CustomFontTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/primary_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="DÃ­a 1  |  7 de Junio 2016"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@color/yana_green" />

        <com.icaboalo.yana.old.ui.widget.CustomFontTextView
            android:textColor="@color/secondary_text"
            android:id="@+id/tvCompletedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="4"
            android:textSize="16sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/size_double"
            android:layout_marginStart="@dimen/size_double"
            android:background="@color/yana_pink" />

        <com.icaboalo.yana.old.ui.widget.CustomFontTextView
            android:textColor="@color/secondary_text"
            android:id="@+id/tvIncompleteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2"
            android:textSize="16sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="@dimen/size_double"
            android:layout_marginStart="@dimen/size_double"
            android:background="@color/yana_orange" />

        <com.icaboalo.yana.old.ui.widget.CustomFontTextView
            android:textColor="@color/secondary_text"
            android:id="@+id/tvNotDoneCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivEmotionAverage"
            android:layout_width="@dimen/size_normal"
            android:layout_height="@dimen/size_normal"
            android:layout_marginLeft="@dimen/size_double"
            android:layout_marginStart="@dimen/size_double"
            android:src="@drawable/cancel_outlined_circular_32" />
    </LinearLayout>
</RelativeLayout>