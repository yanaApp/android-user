<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.icaboalo.yana.ui.activity.EvaluationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="32dp">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:id="@+id/question_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="Me molestaron cosas que usualmente no me molestan." />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="28dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorAccent">

        <View
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <View
            android:id="@+id/option_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <View
            android:id="@+id/option_2"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <View
            android:id="@+id/option_3"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <View
            android:id="@+id/option_4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:textColor="@color/white"
            android:text="Nunca"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/option_1"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/white"
            android:text="Algunas \nveces"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option_2"
            android:layout_alignLeft="@+id/option_2"
            android:layout_alignStart="@+id/option_2" />

        <TextView
            android:textColor="@color/white"
            android:text="Muchas \nveces"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option_3"
            android:layout_alignLeft="@+id/option_3"
            android:layout_alignStart="@+id/option_3" />

        <TextView
            android:textColor="@color/white"
            android:text="Siempre"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option_4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/continue_button"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
