<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="#fff"
    android:orientation="vertical">


    <RelativeLayout
        android:paddingRight="40dp"
        android:paddingEnd="40dp"
        android:id="@+id/normal_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <View
            android:id="@+id/activity_color"
            android:background="#FFC107"
            android:layout_width="5dp"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/activity_color"
            android:layout_toRightOf="@+id/activity_color"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Title"
            android:textSize="20sp" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_emotion"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/expanded_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/activity_description"
            android:text="Description..."
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/very_sad"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/very_sad_32" />

            <ImageView
                android:id="@+id/sad"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/sad_32" />

            <ImageView
                android:id="@+id/normal"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/normal_32" />

            <ImageView
                android:id="@+id/happy"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/happy_32" />

            <ImageView
                android:id="@+id/very_happy"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/very_happy_32" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:id="@+id/item_divider"
        android:background="#EEEEF0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>




</LinearLayout>