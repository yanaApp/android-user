<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:orientation="vertical">


    <TextView
        android:textAlignment="center"
        android:text="Instrucciones"
        android:textAllCaps="true"
        android:id="@+id/title"
        android:textSize="24sp"
        android:layout_above="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="A continuacion leerÃ¡s unas frases \nque pudieran describir tu sentir. \nPor favor, especifica cuantas \nveces durante la semana pasada \nse ha sentido de la siguiente manera. "
        android:id="@+id/description"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/continue_button"
        android:text="Continuar"
        android:layout_alignParentBottom="true"
        style="@style/AppTheme.ButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>